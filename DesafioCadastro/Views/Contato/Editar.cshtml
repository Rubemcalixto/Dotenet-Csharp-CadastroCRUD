@{
    ViewData["Title"] = "Editar contato";
}

<div class="text-center">
    <h1 class="display-4 mb-5">Cadastrar Contato</h1>
</div>

<form>
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" class="form-control" placeholder="Digite seu nome">
    </div>
    <div class="form-group">
        <label for="CPF">CPF</label>
        <input type="text" class="form-control" placeholder="000.000.000-00">
    </div>
    <div class="form-group">
        <label for="rg">RG</label>
        <input type="text" class="form-control" placeholder="Digite seu RG">
    </div>
    <div class="form-group">
        <label for="data de cadastro">Data de cadastro</label>
        <input type="date" class="form-control" placeholder="">
    </div>
    <div class="form-group">
        <label for="data de nascimento">Data de nascimento</label>
        <input type="date" class="form-control" placeholder="">
    </div>
    <div class="form-group">
        <label for="telefone">Telefone</label>
        <input type="tel" class="form-control" placeholder="xx xxxxx-xxxx">
    </div>

    <button type="submit" class="btn btn-primary btn-lg mt-4">Alterar</button>
    <a class="btn btn-secondary btn-lg mt-4" asp-controller="Contato" asp-action="Index">Voltar</a>
</form>